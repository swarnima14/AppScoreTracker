<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SELECT"
        android:textStyle="bold"
        android:textSize="16sp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <TextView
            android:id="@+id/rbNeg1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="-1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbNeg2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="-2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbNeg3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="-3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbNeg4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="-4"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbNeg5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="-5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/rbPos1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbPos2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbPos3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbPos4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>

        <TextView
            android:id="@+id/rbPos5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_background"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_margin="6dp"/>


    </LinearLayout>

</LinearLayout>